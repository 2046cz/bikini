{% import 'macro/wpml_switch.twig' as wpml_switch %}
{% import "macro/menu_items.twig" as menu_items %}
{% import 'macro/edit-link.twig' as editLink %}
<!DOCTYPE html>
<html>
    <head>
        <link rel="shortcut icon" href="{{ theme.path }}/img/favicon.png" />
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
        <title>{{ wp_title }}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="code-by" content="2046.cz" />
        <!-- web coded by http://2046.cz -->
        <!-- some code licensed under Aggressive Copyright http://aggressive-copyright.org -->

        <!--[if lt IE 9]>
            <script src="{{ theme.path }}/js/vendor/respond.min.js"></script>
        <![endif]-->
        {{ fn('wp_head') }}
    </head>
    <body class="{{ body_class }}">
	{{ editLink.input(post) }}
        {% block top_menu %}
            <nav class="navbar navbar-expand-sm">
                <div class="container">
                    <nav class="navbar" role="navigation">
						<button class="navbar-toggler collapsed" data-toggle="collapse" data-target="#top_menu" aria-controls="top_menu" aria-expanded="false" aria-label="Toggle navigation">
							<span></span>
							<span></span>
							<span></span>
						</button>
						<a href="{{ site.url }}" id="logo">
							<img src="{{ theme.path }}/img/logo.svg" alt="{{ site.title }}">
						</a>
						{{ menu_items.input(top_menu, 'top_menu') }}
					</nav>
                </div>
            </nav>
        {% endblock %}

        {% block content %}
        {% endblock %}

    {{ fn('wp_footer') }}
    </body>
</html>
