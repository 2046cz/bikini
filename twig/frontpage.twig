{% extends 'base.twig' %}
{% import 'macro/edit-link.twig' as editLink %}

{% block content %}
	{% for view in post.get_field('flexible_content') %}
		{% if view.acf_fc_layout == "big_image" %}
			<div class="container {{ view.acf_fc_layout }}" style="{{ view.image.sizes.large }}">
			</div>
			
		{% elseif view.acf_fc_layout == "products" %}
			<div class="content">
				{% for product in products %}
					{{ product.title }}
				{% endfor %}
			</div>

		{% endif %}
	{% endfor %}
{% endblock %}
